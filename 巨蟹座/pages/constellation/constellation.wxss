/* pages/constellation/constellation.wxss */
page{
    background-color: #fff;
    height: 100%;
    font-family: Arial, Helvetica, sans-serif;
}
.background{
    width: 100%;
    height: 905rpx;
    position: absolute;
    z-index: -9999;
}
.header .img{
    width: 382rpx;
    height: 570rpx;
}
.header .date{
    margin-top: 60rpx;
    margin-bottom: 10rpx;
    font-size: 35rpx;
    color: #6dc3f4;
}
.header .tips{
    margin-top: 80rpx;
    font-size: 28rpx;
    line-height: 42rpx;
    width: 80%;
    height: auto;
  /*text-align: center;*/
}
.content{
    width: 650rpx;
    margin-top: 60rpx;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}
.content image{
    width: 160rpx;
    height: 226rpx;
    margin-top: 70rpx;
    margin-left: 40rpx;
}
.content .fortune{
    float: right;
    margin-top: 60rpx;
    margin-right: 40rpx;
    margin-bottom:40rpx;
}
.content .fortune .list{
    display: block;
    margin-bottom: 10rpx;
}
.content .fortune .list text{
    font-size: 28rpx;
    margin-right: 20rpx;
    /*float:left;*/
}
.content .fortune .list image{
    width: 180rpx;
    height: 28rpx;
    margin:0;
    line-height:28rpx;
    /*float:left;*/
}
.jewelry{
    width: 650rpx;
    margin-top: 40rpx;
    border-bottom: 1px solid #ddd;
}
.jewelry .definition{
    font-size: 28rpx;
    font-weight: bold;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 40rpx;
}
.jewelry .definition .name{
    color: #6dc3f4;
}
.jewelry .intro{
    font-size: 24rpx;
    margin-left: 30rpx;
    line-height: 35rpx;
    color: rgb(136, 136, 136)
}
.jewelry .pic{
    width: 630rpx;
    height: 388rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.jewelry .link{
    font-size: 20rpx;
    line-height: 24rpx;
    color: rgb(136, 136, 136);
    text-align: center;
}
.jewelry .notes{
    font-size: 20rpx;
    line-height: 30rpx;
    color: rgb(136, 136, 136);
    text-align: center;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
}
.jewelry .notes .open{
    color: #6dc3f4;
}
.copyright{
    font-size: 12rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    color: rgb(178, 178, 178)
}